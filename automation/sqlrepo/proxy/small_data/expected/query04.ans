-- m/^NOTICE:.*/
-- s/^NOTICE:.*/GP_IGNORE: NOTICE/
--
-- m/DETAIL/
-- s/DETAIL/CONTEXT/
--
-- m/CONTEXT:.*line.*/
-- s/line \d* of //g
--
-- end_matchsubs
GRANT ALL ON TABLE pxf_proxy_small_data_allowed_no_impersonation TO PUBLIC;
GRANT
